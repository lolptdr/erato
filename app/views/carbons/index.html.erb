<% if !flash[:notice].blank? %>
  <div class="alert alert-info">
  <%= flash[:notice] %>
  </div>
<% end %>

<h1>Carbons and Image Uploads</h1>

<%= link_to "New Carbon", new_carbon_path, class: "btn btn-primary" %>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Preview</th>
      <th>Download Link</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @carbons.each do |carbon| %>
      <tr>
        <td>
          <%= carbon.title %>
        </td>
        <td>
          <%= carbon.description %>
        </td>
        <td>
          <%= image_tag carbon.attachment_url(:thumb), alt: carbon["attachment"] if carbon.attachment? %>
        </td>
        <td>
          <%= link_to carbon["attachment"], carbon.attachment_url %>
        </td>
        <td>
          <%= button_to "Delete", carbon, method: :delete, class: "btn btn-danger", data: { confirm: "Delete '#{carbon.title}' permanently?"} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
