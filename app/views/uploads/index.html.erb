<% if !flash[:notice].blank? %>
  <div class="alert alert-info">
  <%= flash[:notice] %>
  </div>
<% end %>

<h1>Audio Waveform Images</h1>
<%= link_to "New Upload", new_upload_path, class: "btn btn-primary" %>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Preview</th>
      <th>Sound</th>
      <th>Download Link</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @uploads.each do |upload| %>
      <tr>
      <td><%= upload.name %></td>
      <td><%= upload.description %></td>
      <td><%= image_tag upload.attachment, :size => '400x300' %></td>
      <td><audio controls class="inline">
          <source src= <%= upload["audio_attachment"] %> type="audio/wav"></td></audio>
      <td class="cut"><%= link_to upload["attachment"], upload["attachment"] %></td>
      <td><%= button_to "Delete", upload, method: :delete, class: "btn btn-danger", data: { confirm: "Delete '#{upload.id}' permanently?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

